{
    "compilerOptions": {
        "baseUrl": "packages",
        "sourceMap": false,
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "allowJs": false,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
